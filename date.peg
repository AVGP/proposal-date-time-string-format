/**
 * A parser expression grammar for Date.parse
 */

DateTime
    = DatePart DateTimeSeparator TimePart
    / DatePart

TimePart
    = Hours TimeSeparator Minutes TimeSeparator Seconds "." SSS " " Z
    / Hours TimeSeparator Minutes TimeSeparator Seconds "." SSS
    / Hours TimeSeparator Minutes TimeSeparator Seconds
    / Hours TimeSeparator Minutes
    / Hours

Z
    = z:([+-]? Hours (TimeSeparator Minutes)?) {
        return {"Z": z};
    }

SSS     = sss:(N? N? N) { return {"sss": sss.join('')}; }
Seconds = s:MinSec { return {"seconds": s.join('')}; }
Minutes = m:MinSec { return {"minutes": m.join('')}; }
Hours   = h:Hour   { return {"hours": h.join('')}; }

Hour          = [2] [0-4] [1] N / [0]? N
MinSec        = [1-5] N / [0]? N
TimeSeparator = " " / ":"
DateTimeSeparator = " " / "T"

DatePart
    = ExtendedYear DateSeparator MonthDay
    / ExtendedYear DateSeparator DayMonth
    / DayMonth DateSeparator Year
    / MonthDay DateSeparator Year
    / Year DateSeparator DayMonth
    / Year DateSeparator MonthDay
    / MonthName " " Day " " Year
    / Day " " MonthName " " Year
    / Year " " MonthName " " Day

MonthDay
    = m:Month DateSeparator d:Day {
        return {"month": m.join(''), "day": d.join('')};
    }

DayMonth
    = d:Day DateSeparator m:Month {
        return {"month": m.join(''), "day": d.join('')};
    }

ExtendedYear
    = y:(([+-])? N N N N N N) { return {"year": y}; }

Year
    = y:(N N? N? N?) {
        y = parseInt(y.join(''));
        if (y < 50) {
            y += 2000;
        } else if (y < 100) {
            y += 1900;
        }
        return {"year": y};
    }

Month
    = [1][0-2] / [0]? N

Day
    = [3][1] / [2] N / [1] N/ [0]? N1

MonthName
    = m:("jan"/ "feb" / "mar" / "apr" / "may" / "jun" / "jul" / "aug" / "sep" / "oct" / "nov" / "dec") {
        return {"month": m};
    }

_ = ([" "])*
DateSeparator = " " / "-" / "/" / ","
N1 = [1-9]
N  = [0-9]
